<%= form_for(@floor) do |f| %>
  <% if @floor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@floor.errors.count, "error") %> prohibited this floor from being saved:</h2>

      <ul>
      <% @floor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div style="border: solid 1px #963">
    <%= f.fields_for :flats, @floor.flats do |flat_form| %>
      <%= render 'flat_fields', :f => flat_form %>
    <% end %>

    <div class="links">
      <%= link_to_add_association 'add flat', f, :flats, class: "btn" %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
